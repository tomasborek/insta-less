{
  "manifest_version": 3,
  "name": "Insta-less",
  "description": "Allows removing the homepage and redirecting directly to DMs on the instagram web interface. There will be more features to come.",
  "version": "0.0.1",
  "icons": {
    "32": "icons/icon-light-32.svg"
  },
  "action": {
    "default_icon": "icons/icon-light-32.svg",
    "default_title": "Insta-less",
    "default_popup": "./popup/index.html"
  },
  "permissions": ["storage", "scripting"],
  "content_scripts": [
    {
      "matches": ["*://*.instagram.com/*"],
      "js": ["./contentScript/index.js"],
      "css": ["./public/global.css"],
      "run_at": "document_start"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "insta-less@tomasborek.com",
      "strict_min_version": "91.0"
    }
  }
}
